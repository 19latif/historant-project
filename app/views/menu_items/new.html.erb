<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h2>Add a menu item </h2>
        <%= simple_form_for([@place, @menu_item]) do |f| %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :category %>
            <%= f.input :price %>
            <%= f.input :visit_date %>
            <%= f.input :rating %>
            <%= f.input :description %>
            <%= f.input :photo, as: :file %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Create a menu item", class: "btn btn-ghost" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
