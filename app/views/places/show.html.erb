<div class="container">
  <div class="card mt-3 text-center">
    <h1><%= @place.name %></h1>
    <p><strong>Category: &nbsp</strong><%= @place.category %></p>
    <% if @place.category == "Restaurant" %>
      <p><strong>Cuisine: &nbsp</strong><%= @place.cuisine %></p>
    <% end  %>
    <p><strong>Address: &nbsp</strong><%= @place.address %></p>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% if @place.menu_items.present? %>
      <% @place.menu_items.each do |menu_item| %>
        <%= render "menu_items/menu_item_card", menu_item: menu_item %>
      <% end %>
    <% else %>
    <div class="card">
      <p>You have not been to <%= @place.name %> yet!</p>
    </div>
    <% end %>
  </div>
</div>
