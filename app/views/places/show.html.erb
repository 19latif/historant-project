<div class="container">
  <div class="card mt-3 text-center">
    <h1><%= @place.name %></h1>
    <p><strong></strong><%= @place.cuisine %> <%= @place.category %></p>
    <%# <% if @place.category == "Restaurant" %>
      <%# <p><strong>Cuisine: &nbsp</strong><%= @place.cuisine %>
    <%# <% end  %>
    <p><strong><i class="fa-sharp fa-solid fa-location-dot"></i>  </strong><%= @place.address %></p>
  </div>

    <div>
    <% if user_signed_in? && current_user == @place.user %>
    <%= link_to "Edit", edit_place_path(@place), class: "btn btn-primary" %>

    <%= link_to "Delete",
    place_path(@place), class: "btn btn-danger",
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  <% end %>
    </div>
    <br>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% if @place.menu_items.present? %>
      <% @place.menu_items.each do |menu_item| %>
        <%= render "menu_items/menu_item_card", menu_item: menu_item %>
      <% end %>
    <% else %>
    <div class="card">
      <p>You have not been to <%= @place.name %> yet!</p>
    </div>
    <% end %>
  </div>
</div>
